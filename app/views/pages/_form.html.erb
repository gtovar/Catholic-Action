<%= form_for @page, :html => {role: "form" } do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="span5">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="span5">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Page.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="span10">
  <div class="form-group">
    <%= f.label :content %>
    <%= link_to "Ayuda", "https://daringfireball.net/projects/markdown/basics" %>
    <%= f.text_area :content, class: "form-control", rows: 10, style:"width: 100%; height: 800px;"  %>
  </div>
  </div>
  <div class="span5">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
