<html>
  <head>
    <%= stylesheet_link_tag "bootstrap3","dashboard" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'shared/navbar_admin' %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class=<%= cp(notices_path) %> >
            <%= link_to notices_path do %>
              <span class="badge pull-right"><%= @notices.count %></span>
              Noticias
            <% end %>
            </li>
            <li class=<%= cp(pages_path) %> >
            <%= link_to pages_path do %>
              <span class="badge pull-right"><%= @pages.count %></span>
              Paginas
            <% end %>
            </li>
          </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= yield %>
        </div>

      </div>
    </div>
    <%= javascript_include_tag "bootstrap3", "docs" %>
  </body>
</html>
